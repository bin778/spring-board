<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyb.board.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.cyb.board.dto.UserDto">
        INSERT INTO users (user_type, id, pwd, name, phone, address)
        VALUES ('general', #{id}, #{pwd}, #{name}, #{phone}, #{address})
    </insert>

    <select id="findById" parameterType="String" resultType="com.cyb.board.dto.UserDto">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <update id="updateUser" parameterType="com.cyb.board.dto.UserDto">
        UPDATE users
        SET
            pwd = #{pwd},
            name = #{name},
            phone = #{phone},
            address = #{address}
        WHERE
            id = #{id}
    </update>

    <delete id="deleteUser" parameterType="String">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <select id="selectAllUsers" resultType="com.cyb.board.dto.UserDto">
        SELECT * FROM users ORDER BY idx DESC
    </select>

    <select id="getTotalUserCount" resultType="int">
        SELECT COUNT(*) FROM users
    </select>

    <select id="getTodayRegisteredUserCount" resultType="int">
        SELECT COUNT(*)
        FROM users
        WHERE TRUNC(created) = TRUNC(SYSDATE)
    </select>

</mapper>